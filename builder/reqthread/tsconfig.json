{
      "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "esnext"],
      "target": "ES2018",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "declaration": true,
      "allowUnreachableCode":true,
      "declarationMap": true,
      "allowUnusedLabels":true,
      "noEmit": true,
      "jsx": "react",
      "strict": false,
      "pretty": false,
      /* Additional Checks */
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
      /* Module Resolution Options */
      "resolveJsonModule": true,
      "allowJs": true
  },
  "include": [
      "src/**/*",
      "../app/constants/**/*.ts",
      "../app/actions/**/uiActions.ts"
  ]
}
